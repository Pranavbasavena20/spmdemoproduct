<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
	<Dialog class="dilgtilte" title="New Vendor Registration" contentWidth="100%" horizontalScrolling="false" draggable="false"
		busy="{objectView>/busy}" busyIndicatorDelay="0" afterClose="onAfterCloseForm">
		<content>
			<IconTabBar id="idIconTabBar" select=".onFilterSelect" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter class="iconTxt" icon="sap-icon://offsite-work" iconColor="Positive" design="Horizontal" text="Office" key="Office">
						<form:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" columnsL="1" columnsXL="1" editable="true"
							adjustLabelSpan="false" singleContainerFullSize="false">
							<form:content>
								<!--<core:Title class="dilgtilte" text="Office"/>-->
								<VBox>
									<Label text="Title" required="true"/>
									<ComboBox width="100%"/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Company / Vendor Name" required="true"/>
									<Input/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="false"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Nature of Business" required="true"/>
									<ComboBox width="100%"/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Nature of Products" required="true"/>
									<Input/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="false"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Company / Vendor Name" required="true"/>
									<Input/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Department" required="true"/>
									<ComboBox width="100%"/>
								</VBox>
								<VBox>
									<Label text="Sub-Department" required="true"/>
									<ComboBox width="100%"/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
									</layoutData>
								</VBox>
							</form:content>
						</form:SimpleForm>
					</IconTabFilter>
					<IconTabSeparator icon="sap-icon://open-command-field"/>
					<IconTabFilter class="iconTxt" icon="sap-icon://business-card" iconColor="Positive" design="Horizontal" text="Business Contact Information"
						key="Contact">
						<form:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" columnsL="1" columnsXL="1" editable="true"
							adjustLabelSpan="false" singleContainerFullSize="false">
							<form:content>
								<VBox>
									<Label text="House Number" required="true"/>
									<Input/>
								</VBox>
								<VBox>
									<Label text="Street" required="true"/>
									<Input/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="City" required="true"/>
									<Input/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Postal Code" required="true"/>
									<Input/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="District" required="true"/>
									<Input/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="PO Box No." required="true"/>
									<Input width="100%"/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Country" required="true"/>
									<ComboBox width="100%"/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Region" required="true"/>
									<ComboBox width="100%"/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Primary Contact Name" required="true"/>
									<Input width="100%"/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Email" required="true"/>
									<Input width="100%"/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="false"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Mobile Number" required="true"/>
									<Input width="100%"/>
									<layoutData>
										<layout:GridData span="XL6 L6 M6 S12" linebreak="true"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Remarks" required="true"/>
									<TextArea width="100%"/>
									<layoutData>
										<layout:GridData span="XL12 L12 M12 S12" linebreak="true"/>
									</layoutData>
								</VBox>
							</form:content>
						</form:SimpleForm>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<buttons >
			<Button visible="{oLanding>/sNext}" class="btnclass" text="Next" press="onClickNext"/>
			<Button visible="{oLanding>/sNext}" text="Cancel" press="onCancelForm"/>
		</buttons>
		<buttons >
			<Button visible="{oLanding>/sSubmit}" class="btnclass" text="Submit" press="onClickSubmit"/>
			<Button visible="{oLanding>/sSubmit}" text="Cancel" press="onCancelForm"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>