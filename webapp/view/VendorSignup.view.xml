<mvc:View controllerName="com.spm.suppilerportal.controller.VendorSignup" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page showHeader="false" id="page" class="BackgroundColor" title="{i18n>title}" backgroundDesign="List">
                    <content>
                        <FlexBox class="sapUiLargeMarginTop" justifyContent="Center">
                            <micro:MicroProcessFlow id="idMP">
                                <micro:content>
                                    <micro:MicroProcessFlowItem class="vendorCss classPurpledot1" />
                                    <micro:MicroProcessFlowItem class="vendorCss classPurpledot" press="onfnnextpress1" />
                                    <micro:MicroProcessFlowItem class="vendorCss" press="onfnnextpress2" />
                                    <micro:MicroProcessFlowItem class="vendorCss" press="onfnnextpress3" />
                                </micro:content>
                            </micro:MicroProcessFlow>
                        </FlexBox>
                        <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorSignup.BasicInformation" type="XML" />
                        <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorSignup.Address" type="XML" />
                        <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorSignup.ContactInformation" type="XML" />
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
