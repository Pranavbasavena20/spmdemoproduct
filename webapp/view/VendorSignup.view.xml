<mvc:View controllerName="com.spm.suppilerportal.controller.VendorSignup" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page showHeader="false" id="page" class="BackgroundColor" title="{i18n>title}" backgroundDesign="List">
                    <content>
                        <FlexBox class="sapUiLargeMarginTop" justifyContent="Center">
                            <micro:MicroProcessFlow id="idMP">
                                <micro:content>
                                    <micro:MicroProcessFlowItem class="classPurpledot1" />
                                    <micro:MicroProcessFlowItem />
                                </micro:content>
                            </micro:MicroProcessFlow>
                        </FlexBox>
                        <FlexBox class="sapUiMediumMarginTop" visible="{genericTileModel>/sStep1}" justifyContent="Center" alignContent="Center">
                            <form:SimpleForm width="45rem" title="Basic Information" layout="ResponsiveGridLayout" 
                            labelSpanXL="12" labelSpanL="12" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
                                <form:content>
                                    <VBox>
                                        <Label text="Title" design="Bold" />
                                        <Input value="{oLanding>/sUserName}" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label text="Company Name" design="Bold" />
                                        <Input type="Password" value="{oLanding>/sPassword}" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label text="Nature of Business" design="Bold" />
                                        <Input type="Password" value="{oLanding>/sPassword}" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label text="Nature of product" design="Bold" />
                                        <Input type="Password" value="{oLanding>/sPassword}" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Button text="Proceed to Step 2" press="onfnnextpress2" width="100%" class="button1" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="false" />
                                        </layoutData>
                                    </VBox>
                                </form:content>
                            </form:SimpleForm>
                        </FlexBox>
                        <FlexBox class="sapUiMediumMarginTop" visible="{genericTileModel>/sStep2}" justifyContent="Center" alignContent="Center">
                            <form:SimpleForm  width="45rem" title="Basic Contact Information" layout="ResponsiveGridLayout" 
                            labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
                                <form:content>
                                    <VBox>
                                        <Label text="Designation" design="Bold" />
                                        <Input value="{genericTileModel>/Designation}" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label text="Name" design="Bold" />
                                        <Input value="{genericTileModel>/Name}" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label text="Land Phone No" design="Bold" />
                                        <Input type="Number" value="{genericTileModel>/LandPhoneNo}" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label text="Mobile No" design="Bold" />
                                        <Input type="Number" value="{genericTileModel>/MobileNo}" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label text="Email" design="Bold" />
                                        <Input type="Email" value="{genericTileModel>/Email}" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Button text="Add Contact" press="onfnnextpress3" width="100%" class="button1" />
                                        <layoutData>
                                            <layout:GridData span="XL12 L12 M12 S12" linebreak="false" />
                                        </layoutData>
                                    </VBox>
                                </form:content>
                            </form:SimpleForm>
                        </FlexBox>
                        <FlexBox width="100%" visible="{genericTileModel>/sStep3}" justifyContent="Center" alignItems="Center">
                            <Table width="90%" class="sapUiLargeMargin" id="idProductsTable" backgroundDesign="Solid" inset="false" mode="MultiSelect" items="{genericTileModel>/aContact}">
                                <columns>
                                    <Column width="10em">
                                        <Text text="Designation" />
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true">
                                        <Text text="Name" />
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                        <Text text="Land Mobile No" />
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                        <Text text="Mobile" />
                                    </Column>
                                    <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                        <Text text="Email" />
                                    </Column>
                                    <Column hAlign="End">
                                        <Text text="" />
                                    </Column>
                                    <Column hAlign="End">
                                        <Text text="" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Middle">
                                        <cells>
                                            <Text text="{genericTileModel>Designation}" />
                                            <Text text="{genericTileModel>Name}" />
                                            <Text text="{genericTileModel>LandPhoneNo}" />
                                            <Text text="{genericTileModel>MobileNo}" />
                                            <Text text="{genericTileModel>Email}" />
                                            <Button text="Edit" width="6rem" class="button1" />
                                            <Button text="Delete" width="6rem" class="button1" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </FlexBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
