<mvc:View controllerName="com.spm.suppilerportal.controller.TaskMaster" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
    <Page id="page" backgroundDesign="List" showHeader="false" title="{i18n>title}">
        <content>
            <VBox visible="{=${oFiexibleLayout>/Type} === '2' ? true : false}">
                <Table class="TableSelected" id="idMastertable" inset="false" items="{oMasterList>/MasterList}">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title wrapping="true" text="Vendors" level="H3" titleStyle="H3" />
                            <ToolbarSpacer />
                            <SearchField search="onSearch" width="17.5rem" />
                            <Button tooltip="View Sort Settings" icon="sap-icon://sort" press="onPressOverviewTableSort" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="12em">
                            <Text text="Code" />
                        </Column>
                        <Column>
                            <Text text="Name" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Department" />
                        </Column>
                        <Column visible="{oFiexibleLayout>/bColumnVisible}">
                            <Text text="Primary Contact" />
                        </Column>
                        <Column visible="{oFiexibleLayout>/bColumnVisible}">
                            <Text text="Email" />
                        </Column>
                        <Column visible="{oFiexibleLayout>/bColumnVisible}">
                            <Text text="Phone" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" press="onPress" type="Active">
                            <cells>
                                <Text text="{oMasterList>Code}" />
                                <Text text="{oMasterList>Name}" />
                                <Text text="{oMasterList>Department}" />
                                <Text text="{oMasterList>PrimaryContact}" />
                                <Text text="{oMasterList>Email}" />
                                <Text text="{oMasterList>Phone}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
            <VBox visible="{=${oFiexibleLayout>/Type} === '1' ? true : false}">
                <Table class="TableSelected" id="idSupplierRegistartion" inset="false" items="{oSRModel>/Header}">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title wrapping="true" text="Supplier Registartion" level="H3" titleStyle="H3" />
                            <ToolbarSpacer />
                            <SearchField search="onSearch" width="17.5rem" />
                            <Button tooltip="View Sort Settings" icon="sap-icon://sort" press="onPressOverviewTableSort" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="12em">
                            <Text text="{i18n>Code}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>CompanyName}" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>Phone}" />
                        </Column>
                        <Column visible="{oFiexibleLayout>/bColumnVisible}">
                            <Text text="{i18n>EmailID}" />
                        </Column>
                        <Column visible="{oFiexibleLayout>/bColumnVisible}">
                            <Text text="{i18n>PrimaryContactName}" />
                        </Column>
                        <Column visible="{oFiexibleLayout>/bColumnVisible}">
                            <Text text="{i18n>SubDate}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" press="onPress" type="Active">
                            <cells>
                                <Text text="{oSRModel>RETSEQID}" />
                                <Text text="{oSRModel>COMPANY_NAME}" />
                                <Text text="{oSRModel>PHONE_NUMBER}" />
                                <Text text="{oSRModel>EMAIL_ID}" />
                                <Text text="{oSRModel>PRIMARY_CONTACT_NAME}" />
                                <Text text="{oSRModel>date}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
