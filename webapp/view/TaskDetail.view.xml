<mvc:View controllerName="com.spm.suppilerportal.controller.TaskDetail" xmlns:layout="sap.ui.layout" xmlns="sap.uxap" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form">
    <ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" alwaysShowContentHeader="false" preserveHeaderStateOnScroll="false" headerContentPinnable="true" isChildPage="true" upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="{products>Name}" wrapping="true" class="sapUiSmallMarginEnd" />
                </expandedHeading>
                <navigationActions>
                    <m:OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" id="enterFullScreenBtn" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }" />
                    <m:OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" id="exitFullScreenBtn" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }" />
                    <m:OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose" tooltip="Close middle column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }" />
                </navigationActions>
                <actions>
                    <m:Button text="Edit" type="Emphasized" press="onEditScreen" />
                    <m:Button text="Display" type="Emphasized" press="onDisplayScreen" />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>
        <sections>
            <ObjectPageSection title="Basic Information">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.BasicInformation" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Department/Product Info">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.Department" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Address">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.Address" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Contact List">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.ContactList" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Accounting Information">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.AccountingInfo" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Payment Information">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.PaymentInfo" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Withholding Tax Accounting">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.WithholdingTax" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Other Information">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.OtherInfo" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Statutory Documents">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.StatutoryDoc" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Review Log">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.VendorMaster.SupplierPage.StatutoryDoc" type="XML" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
