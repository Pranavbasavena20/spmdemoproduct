<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <FlexBox class="sapUiMediumMarginTop" visible="{genericTileModel>/sStep5}" justifyContent="Center" alignContent="Center">
        <form:SimpleForm width="45rem" title="{i18n>AccountingInformation}" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
            <form:content>
                <VBox>
                    <Label text="{i18n>ReturntoVendor}" design="Bold" labelFor="cbSOReturntoVendor" />
                    <ComboBox selectedKey="{oSOModel>/RTV_ALLOWED}" items="{oMainModel>/department}" width="100%" id="cbSOReturntoVendor" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>DEPT_CODE}" text="{oMainModel>DEPT_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>ReturntoVendorRemarks}" design="Bold" labelFor="taSOReturnVendorRemarks" />
                    <TextArea value="{oSOModel>/REMARKS}" id="taSOReturnVendorRemarks" fieldGroupIds="InputField" required="true" editable="true" width="100%" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>NoReturnMargin}" design="Bold" labelFor="ipSONoreturnMarigin" />
                    <Input value="{oSOModel>/NO_RETURN_MARGIN}" id="ipSONoreturnMarigin" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>VendorClaim}" design="Bold" labelFor="ipSOVendorClaim" />
                    <Input value="{oSOModel>/VENDOR_CLAIM}" id="ipSOVendorClaim" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>CreditPeriod}" design="Bold" labelFor="cbSOCreditPeriod" />
                    <ComboBox selectedKey="{oSOModel>/CREDIT_PERIOD}" items="{oMainModel>/department}" width="100%" id="cbSOCreditPeriod" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>DEPT_CODE}" text="{oMainModel>DEPT_DESC}" />
                    </ComboBox>

                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>RefundableDepositFee}" design="Bold" labelFor="ipSORefundableFee" />
                    <Input value="{oSOModel>/REF_DEPOSIT_FEE}" id="ipSORefundableFee" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>ShippingConditions}" design="Bold" labelFor="cbSOShippingCond" />
                    <ComboBox selectedKey="{oSOModel>/SHIP_CONDITION}" items="{oMainModel>/department}" width="100%" id="cbSOShippingCond" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>DEPT_CODE}" text="{oMainModel>DEPT_DESC}" />
                    </ComboBox>

                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>ReconcialitionAccounts}" design="Bold" labelFor="cbSOReconcilaAcc" />
                    <ComboBox selectedKey="{oSOModel>/RECON_ACCOUNT}" items="{oMainModel>/department}" width="100%" id="cbSOReconcilaAcc" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>DEPT_CODE}" text="{oMainModel>DEPT_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>CashManagementGroup}" design="Bold" labelFor="cbSOCashmanagmentgrp" />
                    <ComboBox selectedKey="{oSOModel>/CASH_MGMT_GRP}" items="{oMainModel>/department}" width="100%" id="cbSOCashmanagmentgrp" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>DEPT_CODE}" text="{oMainModel>DEPT_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>SortKey}" design="Bold" labelFor="cbSOSortKey" />
                    <ComboBox selectedKey="{oSOModel>/SORT_KEY}" items="{oMainModel>/department}" width="100%" id="cbSOSortKey" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>DEPT_CODE}" text="{oMainModel>DEPT_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Button text="{i18n>btnProceedtoPaymentinformation}" press="onfnnextpress6" width="100%" class="button1 header2" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="false" />
                    </layoutData>
                </VBox>
            </form:content>
        </form:SimpleForm>
    </FlexBox>
</core:FragmentDefinition>
