<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <FlexBox class="sapUiMediumMarginTop" visible="{genericTileModel>/sStep2}" justifyContent="Center" alignContent="Center">
        <form:SimpleForm width="45rem" title="{i18n>DepartmentProductInfo}" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
            <form:content>
                <VBox>
                    <Label text="{i18n>Department}" design="Bold" labelFor="cbSoDepartMent" />
                    <ComboBox selectedKey="{oSOModel/DEPARTMENT}" items="{oMainModel>/businessCode}" width="100%" id="cbSoDepartMent" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>BUS_CODE}" text="{oMainModel>CODE_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>Subdepartment}" design="Bold" labelFor="cbSoSubDepartMent" />
                    <ComboBox selectedKey="{oSOModel/SUB_DEPARTMENT}" items="{oMainModel>/businessCode}" width="100%" id="cbSoSubDepartMent" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>BUS_CODE}" text="{oMainModel>CODE_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>Natureofproducts}" design="Bold" labelFor="ipSoNatureofProducts" />
                    <Input value="{oSOModel>/BUSINESS_CODE}" id="ipSoNatureofProducts" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>CategoryManagerExecutive}" design="Bold" labelFor="ipSoCategoryManager" />
                    <Input value="{oSOModel>/CATEGORY_CODE}" id="ipSoCategoryManager" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>AreyouassociatedwithManufacturer}" design="Bold" labelFor="rbSoAssociated" />
                    <RadioButtonGroup selectedIndex="{oSOModel>/EXISTING_ASSOC_MF}" columns="2" width="100%" id="rbSoAssociated" fieldGroupIds="RadioButtonGroup" editable="true">
                        <RadioButton text="{i18n>Yes}" />
                        <RadioButton text="{i18n>No}" />
                    </RadioButtonGroup>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Button text="{i18n>btnProceedtoaddaddress}" press="onfnnextpress3" width="100%" class="button1 header2" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="false" />
                    </layoutData>
                </VBox>
            </form:content>
        </form:SimpleForm>
    </FlexBox>
</core:FragmentDefinition>
