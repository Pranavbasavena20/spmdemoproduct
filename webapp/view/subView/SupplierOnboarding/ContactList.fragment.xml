<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <FlexBox class="sapUiMediumMarginTop" visible="{genericTileModel>/sStep4}" justifyContent="Center" alignContent="Center">
        <form:SimpleForm width="45rem" title="{i18n>ContactList}" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
            <form:content>
                <VBox>
                    <Label text="{i18n>ContactType}" design="Bold" labelFor="cbSoContactType" />
                    <ComboBox selectedKey="{oSRModel/0/Header>/NATURE_OF_BUSINESS}" items="{oMainModel>/businessCode}" width="100%" id="cbSoContactType" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>BUS_CODE}" text="{oMainModel>CODE_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>PrimaryContactName}" design="Bold" labelFor="ipSoPrimaryContactName" />
                    <Input value="{oSRModel>/Header/0/EMAIL_ID}" id="ipSoPrimaryContactName" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>Designation}" design="Bold" labelFor="ipSoDesignation" />
                    <Input value="{oSRModel>/Header/0/EMAIL_ID}" id="ipSoDesignation" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>

                <VBox>
                    <Label text="{i18n>Email}" design="Bold" labelFor="ipSoEmail" />
                    <Input value="{oSRModel>/Header/0/EMAIL_ID}" id="ipSoEmail" fieldGroupIds="Email" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>Phone}" design="Bold" labelFor="ipSoPhone" />
                    <Input value="{oSRModel>/Header/0/EMAIL_ID}" id="ipSoPhone" fieldGroupIds="Number" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>Fax}" design="Bold" labelFor="ipSoFax" />
                    <Input value="{oSRModel>/Header/0/EMAIL_ID}" id="ipSoFax" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>

                <VBox>
                    <Label text="{i18n>Extension}" design="Bold" labelFor="ipSoExtension" />
                    <Input value="{oSRModel>/Header/0/EMAIL_ID}" id="ipSoExtension" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>

                <VBox>
                    <Button text="{i18n>btnAddContacts}" press="onfnnextpress5" width="100%" class="subButton1 header2" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Button text="{i18n>btnProceedtoAccountingInformation}" press="onfnnextpress5" width="100%" class="button1 header2" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
            </form:content>
        </form:SimpleForm>
    </FlexBox>
    <FlexBox visible="{genericTileModel>/sStep4}" justifyContent="Center" alignContent="Center">
        <form:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" columnsXL="1" columnsL="1" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
            <form:content>
                <VBox>
                    <Table id="idProductsTable" inset="false" mode="MultiSelect" items="{genericTileModel>/aContact}">
                        <columns>
                            <Column width="12em">
                                <Text text="{i18n>ContactType}" />
                            </Column>
                            <Column width="15em" minScreenWidth="Tablet" demandPopin="true">
                                <Text text="{i18n>PrimaryContactName}" />
                            </Column>
                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                <Text text="{i18n>Designation}" />
                            </Column>
                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                <Text text="{i18n>Email}" />
                            </Column>
                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                <Text text="{i18n>Phone}" />
                            </Column>
                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                <Text text="{i18n>Fax}" />
                            </Column>
                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                <Text text="{i18n>Extension}" />
                            </Column>
                            <Column hAlign="End">
                                <Text text="" />
                            </Column>
                            <Column hAlign="End">
                                <Text text="" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem vAlign="Middle">
                                <cells>
                                    <Text text="{genericTileModel>Designation}" />
                                    <Text text="{genericTileModel>Name}" />
                                    <Text text="{genericTileModel>LandPhoneNo}" />
                                    <Text text="{genericTileModel>MobileNo}" />
                                    <Text text="{genericTileModel>Email}" />
                                    <Button text="{i18n>btnEdit}" width="6rem" class="button1" />
                                    <Button text="{i18n>btnDelete}" width="6rem" class="button1" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
            </form:content>
        </form:SimpleForm>
    </FlexBox>
</core:FragmentDefinition>
