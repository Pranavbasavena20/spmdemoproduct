<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <FlexBox class="sapUiMediumMarginTop" visible="{genericTileModel>/sStep1}" justifyContent="Center" alignContent="Center">
        <form:SimpleForm width="45rem" title="{i18n>basicInformation}" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
            <form:content>
                <VBox>
                    <Label text="{i18n>CompanySupplierName}" design="Bold" labelFor="ipCompanySupp" />
                    <Input value="{oSOModel>/COMPANY_NAME}" id="ipCompanySupp" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>LegalBusinessEntry}" design="Bold" labelFor="ipLegalBusiness" />
                    <Input value="{oSOModel>/BUSINESS_ENTITY}" id="ipLegalBusiness" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>Natureofbusiness}" design="Bold" labelFor="cbSONatureofbusiness" />
                    <ComboBox selectedKey="{oSOModel>/NATURE_OF_BUSINESS}" items="{oMainModel>/businessCode}" width="100%" id="cbSONatureofbusiness" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>BUS_CODE}" text="{oMainModel>CODE_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>PrimaryEmailID}" design="Bold" labelFor="ipPrimaryEmailid" />
                    <Input value="{oSOModel>/EMAIL_ID}" id="ipPrimaryEmailid" fieldGroupIds="Email" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>BusinessRegistrationNo}" design="Bold" labelFor="ipBusinessRegNo" />
                    <Input value="{oSOModel>/EMAIL_ID}" id="ipBusinessRegNo" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>WEBSITE}" design="Bold" labelFor="ipSOWebsite" />
                    <Input value="{oSOModel>/WEBSITE}" id="ipSOWebsite" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>DeliveryLeadDays}" design="Bold" labelFor="ipSoDeliveryLeadDay" />
                    <Input value="{oSOModel>/DELIVER_LEAD_DAYS}" id="ipSoDeliveryLeadDay" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>VATRegistrationNo}" design="Bold" labelFor="ipSoVATRegNo" />
                    <Input value="{oSOModel>/VAT}" id="ipSoVATRegNo" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Button text="{i18n>btnProceedtodepartment}" press="onfnnextpress2" width="100%" class="button1 header2" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="false" />
                    </layoutData>
                </VBox>
            </form:content>
        </form:SimpleForm>
    </FlexBox>
</core:FragmentDefinition>
