<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <layout:Grid hSpacing="1" defaultSpan="XL12 L12 M12 S12">
        <VBox>
            <Label text="{i18n>PhoneCountryCode}" wrapping="true" design="Bold" />
            <Text text="{oSRModel>/Header/0/PH_COUNTRY_CODE}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>PhoneNo}" design="Bold" />
            <Text text="{oSRModel>/Header/0/PHONE_NUMBER}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>AltPhoneCountryCode}" wrapping="true" design="Bold" />
            <Text text="{oSRModel>/Header/0/ALT_PH_COUNTRY_CODE}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>

        <VBox>
            <Label text="{i18n>AltPhoneNo}" wrapping="true" design="Bold" />
            <Text text="{oSRModel>/Header/0/ALTERNATE_PHN_NUMBER}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>PrimaryContactName}" wrapping="true" design="Bold" />
            <Text text="{oSRModel>/Header/0/PRIMARY_CONTACT_NAME}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>Remarks}" wrapping="true" design="Bold" />
            <Text text="{oSRModel>/Header/0/REMARKS}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>AdditionalInfo}" wrapping="true" design="Bold" />
            <Text text="{oSRModel>/Header/0/ADDITIONAL_INFO}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
    </layout:Grid>
</core:FragmentDefinition>
