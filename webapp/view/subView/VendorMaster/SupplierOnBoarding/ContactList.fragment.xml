<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <layout:Grid hSpacing="1" defaultSpan="XL12 L12 M12 S12">
        <VBox>
            <Label text="Contact Type" wrapping="true" design="Bold" />
            <Text text="{products>ProductId}" visible="{oVendorMaster>/bDisplay}" />
            <ComboBox width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Primary Contact Name" wrapping="true" design="Bold" />
            <Text text="{products>Description}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Designation" wrapping="true" design="Bold" />
            <Text text="{products>SupplierName}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Email" wrapping="true" design="Bold" />
            <Text text="{products>SupplierName}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Phone" wrapping="true" design="Bold" />
            <Text text="{products>SupplierName}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Fax" wrapping="true" design="Bold" />
            <Text text="{products>SupplierName}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Extension" wrapping="true" design="Bold" />
            <Text text="{products>SupplierName}" visible="{oVendorMaster>/bDisplay}" />
            <ComboBox width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
    </layout:Grid>
</core:FragmentDefinition>
