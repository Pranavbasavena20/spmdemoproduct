<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <layout:Grid hSpacing="1" defaultSpan="XL12 L12 M12 S12">
        <VBox>
            <Label text="{i18n>ContactType}" design="Bold" labelFor="cbVSoContactType" />
            <Text text="{oFiexibleLayout>/oSelectedValues/CONTSEQID/OBJECT_TYPE}" visible="{oVendorMaster>/bDisplay}" />
            <ComboBox visible="{oVendorMaster>/bEdit}" selectedKey="{oFiexibleLayout>/oSelectedValues/CONTSEQID/OBJECT_TYPE}" items="{oMainModel>/businessCode}" width="100%" id="cbVSoContactType" fieldGroupIds="{=${oVendorMaster>/bEdit} ? 'ComboboxField' : ' '}" required="true" editable="true">
                <core:Item key="{oMainModel>BUS_CODE}" text="{oMainModel>CODE_DESC}" />
            </ComboBox>
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>PrimaryContactName}" design="Bold" labelFor="ipvSoPrimaryContactName" />
            <Text text="{oFiexibleLayout>/oSelectedValues/CONTSEQID/FIRST_NAME}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" value="{oFiexibleLayout>/oSelectedValues/CONTSEQID/FIRST_NAME}" id="ipvSoPrimaryContactName" fieldGroupIds="{=${oVendorMaster>/bEdit} ? 'InputField' : ' '}" required="true" editable="true" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>Designation}" design="Bold" labelFor="ipvSoDesignation" />
            <Text text="{oFiexibleLayout>/oSelectedValues/CONTSEQID/POSITION}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" value="{oFiexibleLayout>/oSelectedValues/CONTSEQID/POSITION}" id="ipvSoDesignation" fieldGroupIds="{=${oVendorMaster>/bEdit} ? 'InputField' : ' '}" required="true" editable="true" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>Email}" design="Bold" labelFor="ipVSoEmail" />
            <Text text="{oFiexibleLayout>/oSelectedValues/CONTSEQID/EMAIL_ADDRESS}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" value="{oFiexibleLayout>/oSelectedValues/CONTSEQID/EMAIL_ADDRESS}" id="ipVSoEmail" fieldGroupIds="{=${oVendorMaster>/bEdit} ? 'Email' : ' '}" required="true" editable="true" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>Phone}" design="Bold" labelFor="ipVSoPhone" />
            <Text text="{oFiexibleLayout>/oSelectedValues/CONTSEQID/PHONE_NUMBER}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" value="{oFiexibleLayout>/oSelectedValues/CONTSEQID/PHONE_NUMBER}" id="ipVSoPhone" fieldGroupIds="{=${oVendorMaster>/bEdit} ? 'Number' : ' '}" required="true" editable="true" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>Fax}" design="Bold" labelFor="ipVSoFax" />
            <Text text="{oFiexibleLayout>/oSelectedValues/CONTSEQID/FAX_NUMBER}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" value="{oFiexibleLayout>/oSelectedValues/CONTSEQID/FAX_NUMBER}" id="ipVSoFax" fieldGroupIds="{=${oVendorMaster>/bEdit} ? 'InputField' : ' '}" required="true" editable="true" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="{i18n>Extension}" design="Bold" labelFor="ipVSoExtension" />
            <Text text="{oFiexibleLayout>/oSelectedValues/CONTSEQID/EXT_NUMBER}" visible="{oVendorMaster>/bDisplay}" />
            <Input visible="{oVendorMaster>/bEdit}" value="{oFiexibleLayout>/oSelectedValues/CONTSEQID/EXT_NUMBER}" id="ipVSoExtension" fieldGroupIds="{=${oVendorMaster>/bEdit} ? 'InputField' : ' '}" required="true" editable="true" />
            <layoutData>
                <layout:GridData span="{oFiexibleLayout>/Span}" linebreak="true" />
            </layoutData>
        </VBox>
    </layout:Grid>
</core:FragmentDefinition>
