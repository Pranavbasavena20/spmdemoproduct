<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <layout:Grid hSpacing="1" defaultSpan="XL6 L6 M8 S12">
        <VBox>
            <Label text="Title" />
            <Text text="{products>ProductId}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M12 S12" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Company/Vendor Name 1" />
            <Text text="{products>Description}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M12 S12" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Company/Vendor Name 2" />
            <Text text="{products>SupplierName}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M12 S12" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Legal/Business Entry" />
            <Text text="{products>SupplierName}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M12 S12" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Nature of business" />
            <Text text="{products>SupplierName}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M12 S12" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Business Registration No" />
            <Text text="{products>SupplierName}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M12 S12" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="VAT Registration No" />
            <Text text="{products>SupplierName}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M12 S12" linebreak="true" />
            </layoutData>
        </VBox>
    </layout:Grid>
</core:FragmentDefinition>
