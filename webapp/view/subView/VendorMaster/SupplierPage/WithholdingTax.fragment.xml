<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:upload="sap.m.upload" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <layout:Grid hSpacing="1" defaultSpan="XL12 L12 M12 S12">
        <VBox>
            <Label text="WHT Tax Type" wrapping="true" design="Bold" />
            <Text text="{products>ProductId}" visible="{oVendorMaster>/bDisplay}" />
            <ComboBox width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M8 S12" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="WHT Percentage" wrapping="true" design="Bold" />
            <Text text="{products>Description}" visible="{oVendorMaster>/bDisplay}" />
            <ComboBox width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M8 S12" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="WHT Tax Code" wrapping="true" design="Bold" />
            <Text text="{products>ProductId}" visible="{oVendorMaster>/bDisplay}" />
            <ComboBox width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M8 S12" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Excemption Period - To" wrapping="true" design="Bold" />
            <Text text="{products>Description}" visible="{oVendorMaster>/bDisplay}" />
            <DatePicker width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M8 S12" linebreak="false" />
            </layoutData>
        </VBox>
    </layout:Grid>
</core:FragmentDefinition>
