<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <layout:Grid hSpacing="1" defaultSpan="XL12 L12 M12 S12">
        <VBox>
            <Label text="Vendor Remarks" wrapping="true" design="Bold" />
            <Text text="{products>ProductId}" visible="{oVendorMaster>/bDisplay}" />
            <TextArea width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M8 S12" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Category Manager/Executive Remarks" wrapping="true" design="Bold" />
            <Text text="{products>Description}" visible="{oVendorMaster>/bDisplay}" />
            <TextArea width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M8 S12" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Finance Manager Remarks" wrapping="true" design="Bold" />
            <Text text="{products>SupplierName}" visible="{oVendorMaster>/bDisplay}" />
            <TextArea width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M8 S12" linebreak="true" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="HOD Remarks" wrapping="true" design="Bold" />
            <Text text="{products>SupplierName}" visible="{oVendorMaster>/bDisplay}" />
            <TextArea width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M8 S12" linebreak="false" />
            </layoutData>
        </VBox>
        <VBox>
            <Label text="Enter your Remarks" wrapping="true" design="Bold" />
            <Text text="{products>SupplierName}" visible="{oVendorMaster>/bDisplay}" />
            <TextArea width="100%" visible="{oVendorMaster>/bEdit}" />
            <layoutData>
                <layout:GridData span="XL6 L6 M8 S12" linebreak="true" />
            </layoutData>
        </VBox>
    </layout:Grid>
</core:FragmentDefinition>
