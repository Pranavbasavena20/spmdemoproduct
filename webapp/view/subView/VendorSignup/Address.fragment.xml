<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    <FlexBox class="sapUiMediumMarginTop" visible="{genericTileModel>/sStep3}" justifyContent="Center" alignContent="Center">
        <form:SimpleForm width="45rem" title="{i18n>AddressDetails}" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
            <form:content>
                <VBox>
                    <Label text="{i18n>AddressType}" design="Bold" labelFor="cbAddressType" />
                    <ComboBox items="{oMainModel>/subdepartment}" width="100%" id="cbAddressType" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>SUB_DEPT_CODE}" text="{oMainModel>SUB_DEPT_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>AddressLine1}" design="Bold" labelFor="taAddressLine1" />
                    <TextArea width="100%" id="taAddressLine1" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>AddressLine2}" design="Bold" labelFor="taAddressLine2" />
                    <TextArea width="100%" id="taAddressLine2" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>AddressLine3}" design="Bold" labelFor="taAddressLine3" />
                    <TextArea width="100%" id="taAddressLine3" fieldGroupIds="InputField" required="true" editable="true" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>CountryCode}" design="Bold" labelFor="cbCountryCode" />
                    <ComboBox items="{oMainModel>/subdepartment}" width="100%" id="cbCountryCode" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>SUB_DEPT_CODE}" text="{oMainModel>SUB_DEPT_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>State}" design="Bold" labelFor="cbState" />
                    <ComboBox items="{oMainModel>/subdepartment}" width="100%" id="cbState" fieldGroupIds="ComboboxField" required="true" editable="true">
                        <core:Item key="{oMainModel>SUB_DEPT_CODE}" text="{oMainModel>SUB_DEPT_DESC}" />
                    </ComboBox>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>City}" design="Bold" labelFor="ipCity" />
                    <Input value="{genericTileModel>/MobileNo}" id="ipCity" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Label text="{i18n>PostalCode}" design="Bold" labelFor="ipPostalCode" />
                    <Input id="ipPostalCode" type="Number" value="{genericTileModel>/Email}" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </layoutData>
                </VBox>
                <VBox>
                    <Button text="{i18n>btnSubmitRegistration}" press="onfnnextpress4" width="100%" class="button1 header2" />
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="false" />
                    </layoutData>
                </VBox>
            </form:content>
        </form:SimpleForm>
    </FlexBox>
</core:FragmentDefinition>
