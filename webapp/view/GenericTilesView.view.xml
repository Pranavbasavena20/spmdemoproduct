<mvc:View controllerName="com.spm.suppilerportal.controller.GenericTilesView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page id="page" showHeader="false" title="{i18n>title}">
        <content>
            <VBox class="blackTheme">
                <FlexBox width="100%" justifyContent="Center">
                    <SearchField class="sapUiSmallMargin searchField" width="20rem" />
                </FlexBox>
                <HBox alignItems="Center">
                    <HBox class="overflow" items="{genericTileModel>/oTileData}">
                        <items>
                            <VBox class="sapUiSmallMargin">
                                <Label visible="{=${genericTileModel>count} !== '0'}" text="{genericTileModel>count}" class="labelRed1" />
                                <Image class="labelRed" src="{genericTileModel>imageUrl}" press="onImageClick" />
                                <Text textAlign="Center" width="80px" wrapping="true" text="{genericTileModel>titleText}" class="sapUiSmallMarginTop BlackText" />
                            </VBox>
                        </items>
                    </HBox>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
